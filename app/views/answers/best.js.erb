<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        flash('danger', '<%= message %>');
    <% end %>

<% else %>
    flash('success', 'Answer mark as best');
    answersCount(<%= @answers.count %>);
    $('.answers').html('<%= j render @answers %>');
    editAnswer()
<% end %>