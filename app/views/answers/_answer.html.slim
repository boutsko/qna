p
  = answer.body  
  = link_to "Delete Answer", [@question, answer], method: :delete  if current_user && answer.user_id == current_user.id
  = link_to "Edit Answer", [@question, answer], method: :edit  if current_user && answer.user_id == current_user.id
  
  p
    = form_for [@question, answer], remote: true do |f|
      = f.label :body, "Answer"
      = f.text_area :body
      = f.submit 'Save'
